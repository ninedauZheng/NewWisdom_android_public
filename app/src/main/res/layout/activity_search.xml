<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_common_bg">

    <com.app.newwisdom.view.view.CommonTitleView
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_text = "搜索"/>

    <EditText
        android:id="@+id/ed_imei"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:background="@color/color_common_bg_white"
        android:paddingLeft="10dp"
        android:layout_marginRight="30dp"
        android:lines="1"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="3dp"
        android:textColor="@color/color_bg_grey"
        android:hint="请输入您需要查看设备的IMEI" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@color/color_txt_blue"
        android:text="确定"
        android:textSize="20sp" />


</RelativeLayout>