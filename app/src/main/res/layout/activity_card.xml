<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_common_bg"
    android:orientation="vertical">

    <com.app.newwisdom.view.view.CommonTitleView
        android:id="@+id/ct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_text="wifi自定义" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="WIFI名称(推荐字母与数字，长度3-10位)"
        android:textColor="@color/color_grey"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/et_ssid"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/color_grey"
        android:paddingLeft="10dp"
        android:lines="1"
        android:textColor="@color/color_white" />


    <TextView
        android:id="@+id/tv_psd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="WIFI密码(推荐字母与数字，长度8-12位)"
        android:textColor="@color/color_grey"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_psw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/color_grey"
        android:paddingLeft="10dp"
        android:lines="1"
        android:textColor="@color/color_white"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@color/color_txt_blue"
            android:text="确定"
            android:textSize="20sp" />
    </FrameLayout>

</LinearLayout>