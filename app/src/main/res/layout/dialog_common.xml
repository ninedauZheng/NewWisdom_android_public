<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_tanchuang">

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="41dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_tanchuang_close" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="注册成功"
            android:textColor="@color/color_txt_blue"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="color_greycolor_greycolor_greycolor_greycolor_greycolor_greycolor_greycolor_grey"
            android:textColor="@color/color_grey"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tv_content">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_grey"
                android:text="取消"
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_txt_blue"
                android:text="好的"
                android:textColor="@color/color_white"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>